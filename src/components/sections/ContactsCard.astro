---
import Card from '../Card.astro'
import { LINKS } from '../../lib/constants'
---

<Card colSpan="md:col-span-1" rowSpan="md:row-span-4">
  <div class="h-full">
    <header class="flex items-center">
      <h1 class="text-xl font-bold text-foreground">
        Let's start working together!
      </h1>
    </header>

    <div class="mt-4">
      <h2 class="text-gray-500">I can help with</h2>
      <ul class="list-disc pl-5 text-foreground">
        <li>Full-Stack Development</li>
        <li>Backend Development</li>
        <li>Cloud Solutions</li>
        <li>Data Analysis</li>
        <li>Machine Learning & AI Solutions</li>
        <li>Automation & Scripting</li>
      </ul>
    </div>

    <div class="mt-4 flex flex-col">
      <h2 class="text-gray-500">Contact Details</h2>
      <p>pavan.kanumuri@hotmail.com</p>
    </div>

    <div class="mt-4 flex w-fit flex-col">
      <h2 class="text-gray-500">Socials</h2>
      <ul>
        <li>
          <a href={LINKS.linkedin} target="_blank" class="text-orange-500 hover:underline">LinkedIn</a>
        </li>
        <li>
          <a href={LINKS.github} target="_blank" class="text-orange-500 hover:underline">GitHub</a>
        </li>
      </ul>
    </div>
  </div>
</Card>
